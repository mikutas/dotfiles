{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    ":prConcurrentLimitNone",
    ":prHourlyLimitNone",
    ":timezone(Asia/Tokyo)",
    "github>aquaproj/aqua-renovate-config#1.10.0",
    "github>aquaproj/aqua-renovate-config:installer-script#1.10.0(aliases\\..*sh)"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": ["aquaproj", "renovate/renovate"],
      "automerge": true,
      "extends": ["schedule:weekends"]
    },
    {
      "matchManagers": ["github-actions"],
      "enabled": true
    }
  ],
  "platformAutomerge": true,
  "recreateWhen": "always",
  "regexManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "\\.config\\/fish\\/aliases\\..*sh"
      ],
      "matchStrings": [
        "renovate\\/renovate:(?<currentValue>.*)-slim"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "renovate/renovate"
    }
  ]
}
