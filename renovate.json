{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    ":prConcurrentLimitNone",
    ":prHourlyLimitNone",
    ":timezone(Asia/Tokyo)",
    "github>aquaproj/aqua-renovate-config#1.8.0",
    "github>aquaproj/aqua-renovate-config:installer-script#1.8.0(aliases\\..*sh)"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": ["aquaproj", "renovate/renovate"],
      "automerge": true,
      "extends": ["schedule:weekends"]
    }
  ],
  "platformAutomerge": true,
  "recreateWhen": "always",
  "regexManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "\\.config\\/fish\\/aliases\\..*sh"
      ],
      "matchStrings": [
        "renovate\\/renovate:(?<currentValue>.*)-slim"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "renovate/renovate"
    },
    {
      "customType": "regex",
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "jqlang/jq",
      "extractVersionTemplate": "^jq-(?<version>.*)$",
      "fileMatch": [
        "\\.?aqua\\.ya?ml"
      ],
      "matchStrings": [
         " +(?:version|'version'|\"version\") *: +jq-(?<currentValue>[^'\" \\n]+) +# renovate: depName=jqlang/jq[ \\n]",
         " +(?:version|'version'|\"version\") *: +'jq-(?<currentValue>[^'\" \\n]+)' +# renovate: depName=jqlang/jq[ \\n]",
         " +(?:version|'version'|\"version\") *: +\"jq-(?<currentValue>[^'\" \\n]+)\" +# renovate: depName=jqlang/jq[ \\n]",
         " +(?:name|'name'|\"name\") *: +jqlang/jq@jq-(?<currentValue>[^'\" \\n]+)",
         " +(?:name|'name'|\"name\") *: +'jqlang/jq@jq-(?<currentValue>[^'\" \\n]+)'",
         " +(?:name|'name'|\"name\") *: +\"jqlang/jq@jq-(?<currentValue>[^'\" \\n]+)\""
      ],
      "versioningTemplate": "regex:^(?<major>\\d+)\\.(?<minor>\\d+)?$"
    }
  ]
}
